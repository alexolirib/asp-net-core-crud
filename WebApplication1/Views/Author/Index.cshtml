@model AuthorIndexViewModel
@*Utilizou o viewImports*@

<h1>@Model.CurrentMessage</h1>
<table>
    @foreach (var author in Model.listAuthors)
    {
        <tr>
            <td><h2>@author.id . </h2></td>
            <td><h2>Name :@author.Name</h2></td>
            <td>
                <a asp-action="details" asp-route-id="@author.id">Details</a>
            </td>
            <td><a asp-action="Delete" asp-route-id="@author.id">Remove</a></td>
            <td><a asp-action="upDate" asp-route-id="@author.id">Edit</a></td>
        </tr>
    }
</table>
<a asp-action="Index" asp-controller="Home">Home</a>  <a asp-action="create">Create</a>


<style>
    a {
        text-decoration: none;
    }
</style>